
          class MutatorForClassificationFactory
            def initialize(verb)
              @verb = verb
              @classification = verb.classification
              calculate_mutator
            end

            def calculate_mutator
              short_type = @classification.split('::').last.to_s
              klass = "Mutators::#{short_type}".constantize
              klass.new(@verb)
            end
          end
